{% extends 'base.html.twig' %}

{% block title %}Connexion - Bibliothèque{% endblock %}

{% block body %}
    <header>
        <h1>Connexion à la Bibliothèque</h1>
    </header>

    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Accueil</a></li>
        </ul>
    </nav>

    <div class="alert-container">
    {% for label, messages in app.flashes %}
        {% if label == 'user_login_success' %}
            {% for message in messages %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        {% elseif label == 'user_login_error' %}
            {% for message in messages %}
                <div class="alert alert-error">
                    {{ message }}
                </div>
            {% endfor %}
        {% elseif label == 'admin_login_success' %}
            {% for message in messages %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        {% elseif label == 'admin_login_error' %}
            {% for message in messages %}
                <div class="alert alert-error">
                    {{ message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endfor %}
    </div>



    <div class="main-content">
        <h2>Connectez-vous à votre compte</h2>

        <div class="form-container">
            <div class="form-box">
                <h3>Connexion Utilisateur</h3>
                {{ form_start(userForm) }}
                    <div class="form-group">
                        {{ form_row(userForm.email, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(userForm.motDePasse, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <button type="submit">Se connecter</button>
                {{ form_end(userForm) }}
            </div>

            <div class="form-box">
                <h3>Connexion Administrateur</h3>
                {{ form_start(adminForm) }}
                    <div class="form-group">
                        {{ form_row(adminForm.pseudo, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(adminForm.mot_de_passe, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                    <button type="submit">Se connecter</button>
                {{ form_end(adminForm) }}
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 Bibliothèque. Tous droits réservés.</p>
    </footer>
{% endblock %}

{% block stylesheets %}
    <style>
        .main-content {
            margin-bottom: 70px;
        }

        .form-container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 30px;
        }

        .form-box {
            width: 45%;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .form-box h3 {
            margin-bottom: 15px;
            color: #4CAF50;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-box button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-box button:hover {
            background-color: #45a049;
        }

        .form-control {
            display: block;
            width: 90%;
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

        .alert-container {
            margin: 20px 0;
        }

        .alert {
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }
    </style>
{% endblock %}
