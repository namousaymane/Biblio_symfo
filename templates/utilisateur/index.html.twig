{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<header>
    <h1>Tableau de bord de l'Administrateur</h1>
</header>

<nav>
    <ul class="nav-right">
        <li class="logout"><a href="{{ path('home') }}">DÃ©connexion</a></li>
    </ul>
</nav>

<div class="dashboard-container">
    <aside class="sidebar">
        <ul>
            <li><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
            <li><a href="{{ path('app_livres') }}">Gestion des livres</a></li>
            <li><a href="{{ path('app_utilisateur') }}" class="active">Gestion des utilisateurs</a></li>
        </ul>
    </aside>

    <main class="dashboard-content">
        <h2>Gestion des Utilisateurs</h2>

        <a href="{{ path('admin_user_add') }}" class="btn btn-add">Ajouter un Utilisateur</a>

        <ul class="user-list">
            {% for utilisateur in utilisateurs %}
                <li class="user-item">
                    <div class="user-info">
                        <em>{{ utilisateur.email }}</em>
                    </div>
                    <div class="user-actions">
                        <a href="{{ path('admin_user_edit', {'id': utilisateur.id}) }}" class="btn btn-edit">Modifier</a>
                        <a href="{{ path('admin_user_delete', {'id': utilisateur.id}) }}" class="btn btn-delete">Supprimer</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </main>
</div>
{% endblock %}

{% block stylesheets %}
<style>
    .dashboard-container {
        display: flex;
        min-height: calc(100vh - 70px);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        background-color: #333;
        color: white;
    }

    nav ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    nav ul li {
        margin-right: 15px;
    }

    .nav-right {
        margin-left: auto;
    }

    nav ul li a {
        color: white;
        text-decoration: none;
        font-size: 16px;
        display: block;
        padding: 10px;
        transition: background-color 0.3s;
    }

    nav ul li a:hover {
        background-color: #111;
    }

    .sidebar {
        width: 250px;
        background-color: #4CAF50;
        padding: 20px;
        color: white;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar ul li {
        margin-bottom: 15px;
    }

    .sidebar ul li a {
        color: white;
        text-decoration: none;
        font-size: 16px;
        display: block;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .sidebar ul li a.active {
        background-color: #45a049;
        font-weight: bold;
    }

    .sidebar ul li a:hover {
        background-color: #45a049;
    }

    .dashboard-content {
        flex: 1;
        padding: 20px;
        background-color: #f9f9f9;
    }

    .dashboard-content h2 {
        color: #4CAF50;
    }

    .user-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .user-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 15px;
        background-color: #fff;
    }

    .user-info {
        font-size: 16px;
    }

    .user-actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 14px;
        text-align: center;
        display: inline-block;
    }

    .btn-add {
        background-color: #4CAF50;
        color: white;
        margin-bottom: 20px;
        display: inline-block;
    }

    .btn-add:hover {
        background-color: #45a049;
    }

    .btn-edit {
        background-color: #FFC107;
        color: white;
    }

    .btn-edit:hover {
        background-color: #FFA000;
    }

    .btn-delete {
        background-color: #F44336;
        color: white;
    }

    .btn-delete:hover {
        background-color: #D32F2F;
    }
</style>
{% endblock %}

