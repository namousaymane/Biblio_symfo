{% extends 'base.html.twig' %}

{% block title %}Ajouter un Utilisateur{% endblock %}

{% block body %}
<header>
    <h1>Tableau de bord de l'Administrateur</h1>
</header>

<nav>
    <ul class="nav-right">
        <li class="logout"><a href="{{ path('home') }}">DÃ©connexion</a></li>
    </ul>
</nav>

<div class="dashboard-container">
    <aside class="sidebar">
        <ul>
            <li><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
            <li><a href="{{ path('app_livres') }}">Gestion des livres</a></li>
            <li><a href="{{ path('app_utilisateur') }}" class="active">Gestion des utilisateurs</a></li>
        </ul>
    </aside>

    <main class="dashboard-content">
        <h2>Ajouter un Utilisateur</h2>

        <form action="{{ path('admin_user_add') }}" method="post">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.motDePasse) }}
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-save">Enregistrer</button>
                <a href="{{ path('app_utilisateur') }}" class="btn btn-cancel">Annuler</a>
            </div>
            {{ form_end(form) }}
        </form>
    </main>
</div>
{% endblock %}

{% block stylesheets %}
<style>

    .dashboard-container {
        display: flex;
        min-height: calc(100vh - 70px);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        background-color: #333;
        color: white;
    }

    nav ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    nav ul li {
        margin-right: 15px;
    }

    .nav-right {
        margin-left: auto;
    }

    nav ul li a {
        color: white;
        text-decoration: none;
        font-size: 16px;
        display: block;
        padding: 10px;
        transition: background-color 0.3s;
    }

    nav ul li a:hover {
        background-color: #111;
    }

    .sidebar {
        width: 250px;
        background-color: #4CAF50;
        padding: 20px;
        color: white;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar ul li {
        margin-bottom: 15px;
    }

    .sidebar ul li a {
        color: white;
        text-decoration: none;
        font-size: 16px;
        display: block;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .sidebar ul li a.active {
        background-color: #45a049;
        font-weight: bold;
    }

    .sidebar ul li a:hover {
        background-color: #45a049;
    }

    .dashboard-content {
        flex: 1;
        padding: 20px;
        padding-right: 50px;
        background-color: #f9f9f9;
    }

    .dashboard-content h2 {
        color: #4CAF50;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    .form-actions {
        display: flex;
        gap: 20px;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn {
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 14px;
        text-align: center;
        display: inline-block;
    }

    .btn-save {
        background-color: #4CAF50;
        color: white;
        flex-grow: 1;
        border: none;
    }

    .btn-save:hover {
        background-color: #45a049;
    }

    .btn-cancel {
        background-color: #F44336;
        color: white;
    }

    .btn-cancel:hover {
        background-color: #D32F2F;
    }
</style>
{% endblock %}

