{% extends 'base.html.twig' %}

{% block title %}Modifier {{ livre.titre }}{% endblock %}

{% block body %}
<header>
    <h1>Tableau de bord de l'Administrateur</h1>
</header>

<nav>
    <ul class="nav-right">
    <li class="logout"><a href="{{ path('home') }}">Déconnexion</a></li>
    </ul>
</nav>

<div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <ul>
            <li><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
            <li><a href="{{ path('app_livres') }}" class="active">Gestion des livres</a></li>
            <li><a href="{{ path('app_utilisateur') }}">Gestion des utilisateurs</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="dashboard-content">
        <h2>Modifier le livre {{ livre.titre }}</h2>

        {{ form_start(form) }}
            <div class="form-group">
                <label for="titre">Titre</label>
                {{ form_widget(form.titre) }}
            </div>
            <div class="form-group">
                <label for="auteur">Auteur</label>
                {{ form_widget(form.auteur) }}
            </div>
            <div class="form-group">
                <label for="isbn">ISBN</label>
                {{ form_widget(form.isbn) }}
            </div>
            <div class="form-group">
                <label for="quantite">Quantité</label>
                {{ form_widget(form.quantite) }}
            </div>
            <div class="form-group">
                <label for="dateParution">Date de Parution</label>
                {{ form_widget(form.dateParution) }}
            </div>
            <div class="form-group">
                <label for="categories">Catégories</label>
                {{ form_widget(form.categories) }}
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                {{ form_widget(form.description) }}
            </div>
            <button type="submit" class="btn btn-search btn-wide">Mettre à jour</button>
        {{ form_end(form) }}

        <a href="{{ path('app_livres') }}" class="back-link">Retour à la liste</a>
    </main>
</div>

{% endblock %}

{% block stylesheets %}
    <style>
        .dashboard-container {
            display: flex;
            min-height: calc(100vh - 70px); 
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            background-color: #333;
            color: white;
        }

        nav ul {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        nav ul li {
            margin-right: 15px;
        }

        .nav-right {
            margin-left: auto;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            display: block;
            padding: 10px;
            transition: background-color 0.3s;
        }

        nav ul li a:hover {
            background-color: #111;
        }

        .sidebar {
            width: 250px;
            background-color: #4CAF50;
            padding: 20px;
            color: white;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 15px;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            font-size: 16px;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .sidebar ul li a:hover {
            background-color: #45a049;
        }

        .dashboard-content {
            flex: 1;
            padding: 20px;
            padding-right: 50px;
            background-color: #f9f9f9;
        }

        .dashboard-content h2 {
            color: #4CAF50;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-search {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .btn-search.btn-wide {
            width: 100%;
        }

        .btn-search:hover {
            background-color: #45a049;
        }

        .back-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .back-link:hover {
            background-color: #45a049;
        }
    </style>
{% endblock %}

