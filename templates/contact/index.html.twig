<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact - Bibliothèque</title>
    <style>
        /* Style global */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Fond et mise en page de base */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212; /* Fond noir */
            color: white;
            min-height: 100vh; /* Prend toute la hauteur de la page */
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 40px;
        }

        h1 {
            text-align: center;
            color: #A8D08D; /* Vert clair */
            font-size: 3rem;
            margin-bottom: 30px;
        }

        /* Formulaire de contact */
        form {
            background-color: #2E2E2E; /* Fond gris foncé */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            width: 100%;
            margin: 0 auto;
        }

        label {
            font-size: 1.2rem;
            color: #F1F1F1;
            margin-bottom: 10px;
            display: block;
        }

        input, textarea {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border: 2px solid #A8D08D;
            border-radius: 5px;
            background-color: #333;
            color: white;
            font-size: 1.1rem;
        }

        input:focus, textarea:focus {
            border-color: #7DB15C; /* Vert foncé au focus */
            outline: none;
        }

        button {
            background-color: #A8D08D; /* Vert clair */
            color: black;
            padding: 12px 30px;
            font-size: 1.2rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            width: 100%;
        }

        button:hover {
            background-color: #7DB15C; /* Vert foncé au survol */
            transform: translateY(-3px);
        }

        button:active {
            background-color: #5B8C4B; /* Vert très foncé au clic */
            transform: translateY(0);
        }

        /* Messages de succès ou erreur */
        .message {
            margin: 20px 0;
            padding: 15px;
            border-radius: 5px;
            width: 100%;
            text-align: center;
        }

        .message.success {
            background-color: #28a745; /* Vert pour succès */
        }

        .message.error {
            background-color: #dc3545; /* Rouge pour erreur */
        }

        /* Bouton retour */
        .back-button {
            display: inline-block;
            width: 200px;
            margin-top: 20px;
            padding: 12px 20px;
            background-color: #7DB15C;
            color: black;
            text-decoration: none;
            text-align: center;
            border-radius: 5px;
            font-size: 1.2rem;
            transition: background-color 0.3s;
        }

        .back-button:hover {
            background-color: #5B8C4B;
        }

        /* Design responsive */
        @media (max-width: 768px) {
            h1 {
                font-size: 2.5rem;
            }

            form {
                padding: 20px;
            }

            input, textarea {
                padding: 12px;
            }

            button {
                padding: 15px;
            }
        }
    </style>
</head>
<body>

    <h1>Contactez-nous</h1>

    <!-- Formulaire de contact -->
    <form method="POST">
        <label for="name">Nom :</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" required>

        <label for="message">Message :</label>
        <textarea id="message" name="message" required></textarea>

        <button type="submit">Envoyer</button>
    </form>

    <!-- Bouton Retour -->
    <a href="/" class="back-button">Retour à l'accueil</a>

</body>
</html>
